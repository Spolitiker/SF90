<body>
  <div class="container">
    <button id="toggleBtn">ZAPNÚŤ ROBOTA</button>
  </div>

  <script>
    let zapnute = false;
    const btn = document.getElementById("toggleBtn");

    btn.onclick = () => {
      zapnute = !zapnute;

      if (zapnute) {
        btn.textContent = "VYPNÚŤ ROBOTA";
        btn.classList.add("off");
      } else {
        btn.textContent = "ZAPNÚŤ ROBOTA";
        btn.classList.remove("off");
      }
    };
  </script>
</body>
